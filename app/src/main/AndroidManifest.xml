<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--拍照功能声明 添加 uses-feature 标签，这样 Android 系统就会知道，require 属性设为 false，
    如果为 true，应用就无法支持那些无此功能的设备了，但是这个应用即使没有相机，也不会导致应用功能缺失，可以正常安装和使用 -->
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <!--读取联系人权限-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--GPS 定位权限-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <application
        android:name=".app.CriminalIntentApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CriminalIntent"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CriminalIntent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.will.criminalintent.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files"/>
        </provider>
        <!--authorities 属性值在整个系统里要有唯一性，习惯做法是加包名
        exported = false 意味着 除了自己和授权的人，其他人不允许使用 FileProvider
        grantUriPermissions 属性用来给其他应用授权-->

        <activity android:name=".TestActivity"
            android:exported="true"
            android:theme="@style/Theme.CriminalIntent">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity android:name=".CoroutineActivity"
            android:exported="true"
            android:theme="@style/Theme.CriminalIntent">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity android:name=".LocationActivity"
            android:exported="true"
            android:theme="@style/Theme.CriminalIntent">
        </activity>
    </application>

    <!--一加手机要加这个权限-->
    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>
</manifest>